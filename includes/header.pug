.header_container
	.container
		.header_content
			.row
				.col-sm-12.col-md-6
					.jumbo_text_box
						span.jumbo_text Trade assets fast and safe

						br
						span.jumbo_sub We connect buyers and sellers

						br
						span its all about freedom
						
						br
						a.btn.create(href="./signup.pug") Creat an account
						a.btn.btn-success(href="./login.pug") Trade assets
				.col-sm-12.col-md-5.offset-md-1.offset-lg-1#top_form
					form.row#topform
						.col.sm-12.justify-content-end

							.row
								.col-sm-12.form-group
									lebal(for="piars")
										span SELECT PAIRS

									
									select#pairs.form-control
										option(value="BTC")#bitcoin Bitcoin
										option(value="ETC")#etc Etc
										option(value="ETH") Ethorium

							.row
								.col-sm-12.form-group
									lebal(for="card")
										span WITH

									
									select#card.form-control
										option(value="5") Amazon Gift Card
										option(value="10") Option2
										option(value="20") Option3

							.row#amount.d-flex

								label.col-sm-12(for="youpay") AMOUNT CALCULATOR
									span.small  Type amount then click outside to see value.

									.row.form-group.mt-2
										.col-4

											label.col-form-label.center(for="youpay").redInput YOU PAY

										.col-8
											input.form-control(type="number" placeholder="Gift Card")#youpay
						
									.row.form-group.mt-3
										.col-4
											label.col-form-label.align-self-center(for="tobuy").redInput TO BUY

										.col-8
											input.form-control(type="number" placeholder="Gift Card")#tobuy

									.row.form-group.mt-1
										.col-xs-12
											.row.form-group
												.col-sm-12
													a.btn.btn-success(href="#") Buy Now
